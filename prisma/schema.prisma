generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)
  workouts  Workout[]
}

model MuscleGroup {
  id                   Int                   @id @default(autoincrement())
  name                 String                @unique
  exerciseMuscleGroups ExerciseMuscleGroup[]
}

model Equipment {
  id                 Int                 @id @default(autoincrement())
  name               String              @unique
  exerciseEquipments ExerciseEquipment[]
}

model Exercise {
  id          Int    @id @default(autoincrement())
  imageUrl   String?
  name        String @unique
  description String

  exerciseEquipments   ExerciseEquipment[]
  exerciseMuscleGroups ExerciseMuscleGroup[]
  workoutExercises     WorkoutExercise[]
}

model ExerciseEquipment {
  exerciseId  Int
  equipmentId Int

  exercise  Exercise  @relation(fields: [exerciseId], references: [id])
  equipment Equipment @relation(fields: [equipmentId], references: [id])

  @@id([exerciseId, equipmentId])
}

model ExerciseMuscleGroup {
  exerciseId    Int
  muscleGroupId Int
  isPrimary     Boolean @default(false)

  exercise    Exercise    @relation(fields: [exerciseId], references: [id])
  muscleGroup MuscleGroup @relation(fields: [muscleGroupId], references: [id])

  @@id([exerciseId, muscleGroupId])
}

model Workout {
  id               Int               @id @default(autoincrement())
  userId           String
  startedAt        DateTime          @default(now())
  endedAt          DateTime?
  user             User              @relation(fields: [userId], references: [id])
  WorkoutExercises WorkoutExercise[]
}

model WorkoutExercise {
  workoutId  Int
  exerciseId Int
  order      Int
  sets       Set[]

  workout  Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@id([workoutId, exerciseId])
}

enum SetType {
  WARMUP
  WORKING
  FAILURE
  DROP
}

model Set {
  workoutExerciseWorkoutId Int
  workoutExerciseExerciseId Int
  repetitions      Int
  weight           Float
  order            Int
  type             SetType          @default(WORKING)
  done             Boolean          @default(false)

  workoutExercise WorkoutExercise @relation(fields: [workoutExerciseWorkoutId, workoutExerciseExerciseId], references: [workoutId, exerciseId], onDelete: Cascade)
  @@id([workoutExerciseWorkoutId, workoutExerciseExerciseId, order])
}